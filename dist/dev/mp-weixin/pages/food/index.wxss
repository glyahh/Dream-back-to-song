
.food-page.data-v-dccd5ad7 {
  background-color: #f6f2e9;
  min-height: 100vh;
  font-family: 'PingFang SC', 'Noto Sans SC', system-ui, -apple-system, sans-serif;
  padding-bottom: 60rpx;
  position: relative;
}

/* 顶部背景区域 */
.header-section.data-v-dccd5ad7 {
  position: relative;
  height: 500rpx;
  overflow: visible;
  z-index: 1;
}
.header-bg.data-v-dccd5ad7 {
  width: 100%;
  height: 100%;
  display: block;
  -o-object-fit: cover;
     object-fit: cover;
  overflow: hidden;
   z-index: 1
}
.header-overlay.data-v-dccd5ad7 {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to bottom,
    rgba(0, 0, 0, 0.3) 0%,
    rgba(0, 0, 0, 0.1) 100%
  );
}

/* 返回按钮 */
.back-btn.data-v-dccd5ad7 {
  position: fixed;
  top: 100rpx;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
}
.back-icon.data-v-dccd5ad7 {
  font-size: 40rpx;
  color: #333;
  font-weight: 300;
  margin-top: -13rpx;
  margin-left: -4rpx;
}

/* 标题内容 */
.header-content.data-v-dccd5ad7 {
  position: absolute;
  bottom: 50rpx;
  left: 0;
  right: 0;
  padding: 0 40rpx;
  z-index: 5;
}
.main-title.data-v-dccd5ad7 {
   display: block;
    font-size: 60rpx;
    color: black;
    font-weight: 600;
    margin-bottom: 10rpx;
    font-family: "SimSun", "Songti SC", "STSong", serif;
    margin-bottom:30rpx;
}
.subtitle.data-v-dccd5ad7 {
  display: block;
  font-size: 33rpx;
  color: black;
  letter-spacing: 4rpx;
}

/* 分类食谱区域 */
.category-section.data-v-dccd5ad7 {
  position: relative;
  padding: 40rpx 30rpx 30rpx;
  margin-top:-30rpx;
  border-radius: 50rpx 50rpx 0 0;
  background:#f6f2e9;
  z-index:10;
}
.section-title.data-v-dccd5ad7 {
  font-size: 50rpx;
  font-weight: 700;
  color: #3b352b;
  letter-spacing: 4rpx;
  margin-top: 40rpx;
  margin-left: 27rpx;
  margin-bottom: 5rpx;
  display: block;
  font-family: 'LiSu', 'SimLi', 'STLiti', 'KaiTi', serif;
}
.song-dynasty-section .section-title.data-v-dccd5ad7 {
  margin-left: -5rpx; /* 覆盖原有样式 */
}


/* 特殊矩形布局 */
.category-rectangle.data-v-dccd5ad7 {
  border-radius: 24rpx;
  padding: 25rpx;
  padding-top:10rpx;
  box-shadow: 0 4rpx 20rpx rgba(225, 225, 225, 0.08);
  display: flex;
  justify-content: space-between;
}
.left-half.data-v-dccd5ad7 {
  width: 48%;
  display: flex;
  flex-direction: column;
}
.right-half.data-v-dccd5ad7 {
  width: 48%;
  display: flex;
  flex-direction: column;
}

/* 分类项基础样式 */
.category-item.data-v-dccd5ad7 {
  border-radius: 18rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 左半边 - 两个等高的项目 */
.left-half .category-item.data-v-dccd5ad7 {
  height: 330rpx; /* 保持等高 */
  margin-bottom: 20rpx;
}
.left-half .category-item.data-v-dccd5ad7:last-child {
  margin-bottom: 0;
}

/* 右半边 - 三个不同高度的项目 */
.right-half .category-item.data-v-dccd5ad7 {
  margin-bottom: 20rpx;
}
.right-half .category-item.data-v-dccd5ad7:last-child {
  margin-bottom: 0;
}

/* 右边三个项目的高度 */
.right-half .vegetarian.data-v-dccd5ad7 {
  height: 200rpx; /* 素食 - 中等高度 */
}
.right-half .dessert.data-v-dccd5ad7 {
  height: 300rpx; /* 点心 - 最大高度 */
}
.right-half .drink.data-v-dccd5ad7 {
  height: 140rpx; /* 饮品 - 最小高度 */
}
.category-bg.data-v-dccd5ad7 {
  width: 100%;
  height: 100%;
  display: block;
  -o-object-fit: cover;
     object-fit: cover;
}
.category-content.data-v-dccd5ad7 {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
}
.category-name.data-v-dccd5ad7 {
  display: block;
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 600;
  margin-bottom: 6rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.7);
}
.category-desc.data-v-dccd5ad7 {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.95);
  letter-spacing: 1rpx;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.7);
}

/* 食在宋朝区域 */
.song-dynasty-section.data-v-dccd5ad7 {
  margin: 30rpx 30rpx 0;
  margin-top:-30rpx;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
}
.section-header.data-v-dccd5ad7 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}
.view-more.data-v-dccd5ad7 {
  display: flex;
  align-items: center;
  margin-top:40rpx;
  height:30rpx;
  padding: 10rpx 20rpx;
  /*background-color: #9ea97f;*/
  border-radius: 30rpx;
}
.view-more-text.data-v-dccd5ad7 {
  font-size: 24rpx;
  color:#3b352b;
  font-weight: 500;
  margin-right: 6rpx;
}
.arrow.data-v-dccd5ad7 {
  font-size: 35rpx;
  color: #3b352b;
  font-weight: 300;
  padding-bottom:10rpx;
}

/* 食在宋朝图片 */
.song-dynasty-img.data-v-dccd5ad7 {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  display: block;
}

/* 触摸效果 */
.back-btn.data-v-dccd5ad7,
.category-item.data-v-dccd5ad7,
.view-more.data-v-dccd5ad7 {
  transition: all 0.2s ease;
}
.back-btn.data-v-dccd5ad7:active {
  opacity: 0.8;
  transform: scale(0.95);
}
.category-item.data-v-dccd5ad7:active {
  opacity: 0.9;
  transform: translateY(-4rpx);
}
.view-more.data-v-dccd5ad7:active {
  background-color: #8b976e;
  transform: scale(0.98);
}

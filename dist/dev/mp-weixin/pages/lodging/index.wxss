
.page.data-v-550acc49 {
  background-color: #f6f2e9;
  min-height: 100vh;
  font-family: 'PingFang SC', 'Noto Sans SC', system-ui, -apple-system, sans-serif;
}

/* 顶部标题区域 */
.hero.data-v-550acc49 {
  position: relative;
  height: 500rpx;
  overflow: hidden;
  z-index: 1;
}
.hero-img.data-v-550acc49 {
  width: 100%;
  height: 100%;
  display: block;
}
.hero-overlay.data-v-550acc49 {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.1) 50%, transparent 100%);
}
.back-btn.data-v-550acc49 {
  position: fixed;
  top: 80rpx;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}
.back-icon.data-v-550acc49 {
  font-size: 48rpx;
  color: #3b352b;
  margin-top: -8rpx;
  margin-left: -4rpx;
}
.hero-content.data-v-550acc49 {
  position: absolute;
  bottom: 60rpx;
  left: 40rpx;
  z-index: 2;
}
.hero-title.data-v-550acc49 {
  display: block;
  font-size: 60rpx;
  color: black;
  font-weight: 600;
  margin-bottom: 10rpx;
  font-family: "SimSun", "Songti SC", "STSong", serif;
  margin-bottom:30rpx;
}
.hero-subtitle.data-v-550acc49 {
  display: block;
  font-size: 33rpx;
  color: black;
}

/* 内容区域容器 */
.content-wrapper.data-v-550acc49 {
  position: relative;
  background-color: #f6f2e9;
  border-radius: 40rpx 40rpx 0 0;
  margin-top: -30rpx;
  z-index: 2;
}

/* 导航图标区域 */
.nav-icons.data-v-550acc49 {
  display: flex;
  justify-content: space-around;
  padding: 60rpx 10rpx;
  margin: 0 30rpx 20rpx;
  border-radius: 30rpx;
}
.nav-item.data-v-550acc49 {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
}
.nav-icon.data-v-550acc49 {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-bottom: 15rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}
.nav-text.data-v-550acc49 {
  font-size: 26rpx;
  color: #3b352b;
  font-weight: 300;
  font-family: "SimSun", "Songti SC", "STSong", serif;
  white-space: nowrap;  /* 防止文字换行 */
  overflow: hidden;     /* 超出部分隐藏 */
  text-overflow: ellipsis; /* 超出部分显示省略号 */
}


/* 通用部分样式 */
.section.data-v-550acc49 {
  padding: 30rpx 60rpx 20rpx;
}
.section-header.data-v-550acc49 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.section-title.data-v-550acc49 {
  font-size: 45rpx;
  color: #3b352b;
  font-weight: 600;
  letter-spacing: 2rpx;
  font-family: "SimSun", "Songti SC", "STSong", serif;
}
.section-more.data-v-550acc49 {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 25rpx;
  background: rgba(158, 169, 127, 0.1);
}
.more-text.data-v-550acc49 {
  font-size: 24rpx;
  color: #9ea97f;
  margin-right: 8rpx;
}
.more-icon.data-v-550acc49 {
  font-size: 28rpx;
  color: #9ea97f;
}

/* 建筑推荐水平滚动 */
.building-scroll.data-v-550acc49 {
  width: 100%;
  white-space: nowrap;
}
.building-container.data-v-550acc49 {
  display: inline-flex;
  gap: 25rpx;
}
.building-card.data-v-550acc49 {
  position: relative;
  width: 330rpx;
  height: 470rpx;
  border-radius: 20rpx;
  overflow: hidden;
  display: inline-block;
  vertical-align: top;
  display: flex;
  flex-direction: column;
}
.building-img.data-v-550acc49 {
  width: 100%;
  height: 380rpx;
  display: block;
  flex-shrink: 0;
}
.building-info.data-v-550acc49 {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.building-name.data-v-550acc49 {
  display: block;
  font-size: 28rpx;
  color: #3b352b;
  font-weight: 500;
  margin-bottom: 8rpx;
  white-space: normal;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.building-location.data-v-550acc49 {
  display: block;
  font-size: 24rpx;
  color: #7a7a7a;
}

/* 名画建筑部分 */
.painting-section.data-v-550acc49 {
  padding-top: 70rpx;
}
.painting-container.data-v-550acc49 {
  width: 100%;
}
.painting-card.data-v-550acc49 {
  position: relative;
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background: #fff;
}
.painting-img.data-v-550acc49 {
  width: 100%;
  height: 100%;
  display: block;
}
.painting-overlay.data-v-550acc49 {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.2) 50%, rgba(0,0,0,0.1) 100%);
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.painting-text-container.data-v-550acc49 {
  display: flex;
  flex-direction: column;
  margin-bottom:-20rpx;
  margin-right:20rpx;
}
.painting-subtitle.data-v-550acc49 {
  font-size: 45rpx;
  color: #ffffff;
  font-weight: 500;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
  letter-spacing: 2rpx;
  line-height: 1.4;
  font-family: "SimSun", "Songti SC", "STSong", serif;
  padding-left:40rpx;
  margin-top: 40rpx
}
.painting-subtitle.second-line.data-v-550acc49 {
  margin-left: 0;
  margin-top: -10rpx
}
.enter-btn.data-v-550acc49 {
  align-self: flex-end;
  background: rgba(255, 255, 255, 0.45);
  border-radius: 20rpx;
  padding: 12rpx 30rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  margin-bottom:20rpx;
}
.enter-text.data-v-550acc49 {
  font-size: 34rpx;
  color: #3b352b;
  font-weight: 500;
  letter-spacing: 1rpx;
}

/* 点击效果 */
.nav-item.data-v-550acc49,
.building-card.data-v-550acc49,
.painting-card.data-v-550acc49,
.section-more.data-v-550acc49,
.enter-btn.data-v-550acc49 {
  transition: transform 0.2s ease, opacity 0.2s ease;
}
.nav-item.data-v-550acc49:active {
  transform: scale(0.95);
  opacity: 0.9;
}
.building-card.data-v-550acc49:active,
.painting-card.data-v-550acc49:active {
  transform: scale(0.98);
  opacity: 0.9;
}
.section-more.data-v-550acc49:active {
  opacity: 0.8;
}
.enter-btn.data-v-550acc49:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* 滚动条隐藏 */
.building-scroll.data-v-550acc49 ::-webkit-scrollbar {
  display: none;
}
.building-scroll.data-v-550acc49 {
  -webkit-overflow-scrolling: touch;
}
